{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User Id</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ user.contact }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Back</a>

    <a href="{{ path('user_edit', {'userId': user.userId}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
